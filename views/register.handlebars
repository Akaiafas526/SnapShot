<div>

  <form id="register-form">
    <div class="login-page">

      <div class="login-container">
        <h2 class="sign-in text-center">Sign Up</h2>
        <label for="username">Username</label>
        <input
          id="username-input-signup"
          class="input form-control fs-4"
          type="text"
          placeholder="Enter Username"
          id="username"
          required
        />
        <label for="email">Email</label>
        <input
          id="email-input-signup"
          class="input form-control fs-4"
          type="text"
          placeholder="Enter Email"
          id="email"
          required
        />
        <label for="password">Password</label>
        <input
          id="password-input-signup"
          class="input form-control fs-4"
          type="text"
          placeholder="Enter Password"
          id="password"
          required
        />
        <button id="register-btn" class="login-btn btn px-4">Login</button>
        
        <div>Back to <a href="/login">Sign In</a></div>

      </div>
    </div>
  </form>

</div>

{{!-- Modal for error registering --}}
<div
  class="modal fade"
  id="registerModal"
  tabindex="-1"
  aria-labelledby="registerModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="registerModalLabel">Failed to register!</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">

      </div>
    </div>
  </div>
</div>

