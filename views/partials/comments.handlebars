<div class="comments" data-commentId = {{id}}>
    <h4 class="text-white">{{user.username}}</h4>
    <p class="text-white">{{text}}</p>




    <!-- Edit Comment Button trigger modal -->
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#editCommentModal">
        Edit Comment
    </button>

    <!-- Edit Comment Modal -->
    <form class="edit-comment-form">
    <div class="modal fade" id="editCommentModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="text">
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel
                        </button>
                        <button type="submit" class="btn btn-primary ">Edit</button>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</form>

    <!-- Delete Comment Button trigger modal -->
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#deleteCommentModal">
        Delete Comment
    </button>

    <!-- Delete Comment Modal -->
    <form class="delete-comment-form">
    <div class="modal fade" id="deleteCommentModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div>Are you sure you want to delete this comment?</div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel
                        </button>
                        <button type="submit" class="btn btn-primary deleteCommentBtn">Delete</button>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</form>






</div>

