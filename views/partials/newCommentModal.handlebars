<!-- COMMENT Modal -->
<form class="comment-form">
  <div
    class="modal fade"
    id="commentModal"
    tabindex="-1"
    aria-labelledby="commentModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="commentModalLabel">New Comment</h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>

        {{!-- Stores the ID of the post to be passed in when creating the comment --}}
        <input type="hidden" name="postId" value="{{post.id}}" />
        <div class="modal-body text-center">
          <textarea
            name="username"
            id="newComment"
            class="form-control"
            aria-label="With textarea"
            maxlength="250"
          ></textarea>
          
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >Close</button>
            <button type="submit" class="btn btn-primary commentModalBtn">Add
              comment</button>

          </div>
        </div>
      </div>
    </div>
  </div>
</form>