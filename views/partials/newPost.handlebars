<!-- Add New Post Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content ">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New Post</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body new-post-body">
        <form class="formPic">
          <div class="">
            <div class=" d-flex flex-column align-items-center">
              
              <input class="post-title titleBoxModal my-2 form-control light-blue" type="text" name="title" placeholder="Title" maxlength="250" required>
              
              {{!-- Drop area for picture --}}
              <label class="pictureInput" for="picture">
                <input type="file" name="picture" class="upload" />
              </label>
              
              <div class="input-group">
  
                <textarea class="form-control descBoxModal my-2 light-blue" aria-label="With textarea" name="description" placeholder="Description" maxlength="250" required></textarea>
              </div>


              {{!-- Drop down of tags for new post --}}
              <select class="tags form-select light-blue text-center"  aria-label="Default select example" name="tags">
                <option disabled selected value>---  Select Hashtag For Post  ---</option>
                <option value="all" name="all">No Hashtag</option>

                {{!-- Creates an option for each tag --}}
                {{#each tag}}
                  <option value={{id}}>#{{name}}</option>
                {{/each}}
              </select>
            </div>
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>


        </form>
      </div>
    </div>
  </div>
</div>