<div class="navigation d-flex text-white justify-content-between align-items-center mx-5 my-5 flex-wrap">
  <div class="singlePostNav d-flex justify-content-between">
    <div class="home-container">
      <a type="button" href='/' value="Home" class="text-white fs-2 profile"><p>Home</p></a>
    </div>
    <div class="profile-container">
      <a href="/user/{{userId}}" class="text-white fs-2 profile"><p>My Posts</p></a>
    </div>
  </div>
  <div class="logout-container">
  <a class="text-decoration-none text-white fs-2 " href="#" id="logout"><p>Logout</p></a>
  </div>
</div>


<div class="tagAndProfile d-flex align-items-center  justify-content-around">
  <button type="button" class="newPostBtn rounded py-1 px-2 fs-3" data-bs-toggle="modal" data-bs-target="#exampleModal">
    New Post
  </button>
  <select class="tags form-select tagDropdown my-auto"  aria-label="Default select example" name="tags">
    <option disabled selected value>#{{currentTag.name}}</option>
    <option value="all" name="all">all</option>

    {{!-- Option for each tag --}}
    {{#each tag}}
      <option value={{id}} >#{{name}}</option>
    {{/each}}
  </select>
</div>

{{!-- All posts - Check if empty --}}
<div class="container d-flex flex-wrap justify-content-center">

  {{#if post}}
    {{#each post}}
    {{>posts}}
    {{/each}}
  {{else}}
    <h1 class="display-3 text-white text-center mt-3">No #{{currentTag.name}} posts yet</h1>
  {{/if}}
</div>

{{!-- New post Modal --}}
{{>newPost}}

</div>
