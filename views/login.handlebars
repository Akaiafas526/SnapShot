 <form id="login-form">
        <div class="container">
            <div class="row">
                <div class="login-container col-sm-3">
                    <h2 class="sign-in text-center">Sign In</h2>
                    <label for="username">Username</label>
                    <input id="username-input-login" class="input" type="text" placeholder="Enter Username" name="username" required>
                    <label for="password">Password</label>
                    <input id="password-input-login" class="input" type="text" placeholder="Enter Password" name="password" required>
                    <button class="login-btn text-center"  >Login</button>
                    {{!-- data-bs-toggle="modal" data-bs-target="#loginModal" --}}
                    <hr>
                    <p>Don't have an account? Register <a href="/register">Here</a></p>
                </div>
            </div>
        </div>
    </form>


    <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Failed to login!</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                       
                    </div>
                </div>
            </div>
        </div>


  

