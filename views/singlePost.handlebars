<div class="singlePostNav d-flex text-white justify-content-between">
<input type="button" onclick="location.href='/';" value="Go to Homepage" class="backBtn" />
<a href="/user/{{userId}}" class="text-white fs-2 mt-3">My Profile</a>
<a href="#" class="px-4 text-decoration-none text-white fs-1 logoutBtn" >Logout</a>
</div>

<div class="d-flex flex-column align-items-center justify-content-center post" data-postId="{{post.id}}">
    <div class="text-white d-flex flex-column  justify-content-center">
        <h2 class="pic-title">{{post.title}}</h2>
        <div class="pic-username"><a href="/user/{{post.user.id}}">{{post.user.username}}</a></div>

        <div class="card-container d-flex justify-content-center">
            <div class="card-box">
                <img class="card-image" src="..{{post.picture}}" alt="pic">
                <div class="pic-desc">{{post.description}}</div>
            </div>


        </div>
    </div>

    <div>
        <!-- COMMENT Button trigger modal -->
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#commentModal">
            Add New Comment
        </button>

        {{>newCommentModal}}

{{#if isOwner.valid}}
        <!-- EDIT Button trigger modal -->
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#editModal">
            Edit Post
        </button>
{{/if}}
        

{{>editPostModal}}

{{#if isOwner.valid}}
        <!-- DELETE Button trigger modal -->
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#deleteModal" >
            Delete Post
        </button>
{{/if}}
        

    {{>deletePostModal}}

        <div class="d-flex flex-column">
            {{#each post.comments as |comment|}}
            {{>comments}}
            {{/each}}
        </div>
            {{>editCommentModal}}
            {{>deleteCommentModal}}
            



    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>

<script src="/js/singlePost.js"></script>