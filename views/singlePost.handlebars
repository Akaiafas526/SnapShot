<div>
<input type="button" onclick="location.href='/';" value="Go to Homepage" class="backBtn" />
</div>

<div class="d-flex flex-column align-items-center justify-content-center post" data-postId="{{post.id}}">
    <div class="text-white d-flex flex-column  justify-content-center">
        <h2 class="pic-title">{{post.title}}</h2>
        <div class="pic-username"><a href="/user/{{post.user.id}}">{{post.user.username}}</a></div>

        <div class="card-container d-flex justify-content-center">
            <div class="card-box-single d-flex justify-content-center">
                <img class="card-image" src="..{{post.picture}}" alt="pic">
                
            </div>
        </div>
    </div>

    <div class="pic-desc text-white">{{post.description}}</div>

    <div>
        <!-- COMMENT Button trigger modal -->
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#commentModal">
            Add New Comment
        </button>

        <!-- COMMENT Modal -->
        <form class="comment-form">
            <div class="modal fade" id="commentModal" tabindex="-1" aria-labelledby="commentModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="commentModalLabel">New Comment</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <input type="hidden" name="postId" value="{{post.id}}">
                        <div class="modal-body">
                            <input type="text" name="username" id="newComment">
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary commentModalBtn">Add comment</button>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>

{{#if isOwner.valid}}
        <!-- EDIT Button trigger modal -->
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#editModal">
            Edit Post
        </button>
{{/if}}
        <!-- EDIT Modal -->
        <form class="edit-post-form">
        <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editModalLabel">Edit Post</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                       <input type="hidden" name="postId" value="{{post.id}}">
                    <div class="modal-body">

                        <div class="text-black post-container flex-column d-flex ">
                            <div class="align-items-center">
                                <div>Edit Post</div>
                                <div>Title:</div>
                                <input class="post-title" type="text" name="title">
                                <div>Decription</div>
                                <input class="description-box" type="text" name="description">
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary"
                                        data-bs-dismiss="modal">Close</button>
                                    <button  class="btn btn-primary editModalBtn">Save changes</button>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </form>



{{#if isOwner.valid}}
        <!-- DELETE Button trigger modal -->
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#deleteModal">
            Delete Post
        </button>
{{/if}}
        <!-- DELETE Modal -->
        <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Delete Post</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">

                        <div class="text-black post-container flex-column d-flex ">
                            <div class="align-items-center">
                                <div>Are you sure you want to delete this post?</div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Don't
                                        Delete</button>
                                    <button  class="btn btn-primary deleteModalBtn">Delete</button>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>



        <div class="comment-box-single d-flex flex-column">
            {{#each post.comments as |comment|}}
            {{>comments}}
            {{/each}}
        </div>



    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
