</div>

<div class="d-flex flex-column align-items-center justify-content-center post" data-postId="{{post.id}}">
    <div class="text-white d-flex flex-column  justify-content-center">
        <h2 class="pic-title">{{post.title}}</h2>
        <div class="pic-username"><a href="/user/{{post.user.id}}">{{post.user.username}}</a></div>

        <div class="card-container d-flex justify-content-center">
            <div class="card-box-single d-flex justify-content-center">
                <img class="card-image-single" src="..{{post.picture}}" alt="pic">
                
            </div>
        </div>
    </div>

    <div class="pic-desc text-white">{{post.description}}</div>

    <div class="post-buttons">
        <!-- COMMENT Button trigger modal -->
        <button type="button" class="single-post-button btn" data-bs-toggle="modal" data-bs-target="#commentModal">
            Add New Comment
        </button>

        {{>newCommentModal}}

{{#if isOwner.valid}}
        <!-- EDIT Button trigger modal -->
        <button type="button" class=" single-post-button btn" data-bs-toggle="modal" data-bs-target="#editModal">
            Edit Post
        </button>
{{/if}}
        

{{>editPostModal}}

{{#if isOwner.valid}}
        <!-- DELETE Button trigger modal -->
        <button type="button" class=" single-post-button btn" data-bs-toggle="modal" data-bs-target="#deleteModal" >
            Delete Post
        </button>
{{/if}}
        
</div>
    {{>deletePostModal}}

        {{#if post.comments}}
        <div id="comment-box" class="comment-box-single">
            {{#each post.comments as |comment|}}
            {{>comments}}
            {{/each}}
        </div>
        {{/if}}
            {{>editCommentModal}}
            {{>deleteCommentModal}}
            



    
</div>

