<div class="navigation d-flex text-white justify-content-between align-items-center mx-5 my-5 flex-wrap">
  <div class="profile-container user-page">
    <a href="/" class="text-white fs-2"><p>Home</p></a>
  </div>
  <div class="logout-container user-page">
    <a class="text-decoration-none text-white fs-2 " href="#" id="logout"><p>Logout</p></a>
  </div>
</div>

<div class="projectName-container text-center text-white">

  {{!-- Selects the username of the user for the first post since all posts sent to this view are for the same user --}}
  <h2 class="display-3 mt-4">{{post.0.user.username}}</h2>
</div>

<div class="container d-flex flex-wrap justify-content-center">

{{!-- All posts - Check if no posts --}}
{{#if post}}
  {{#each post}}
    {{>posts}}
  {{/each}}
{{else}}
  <h1 class="display-3 text-white text-center mt-3">You don't have any posts yet</h1>
{{/if}}
</div>