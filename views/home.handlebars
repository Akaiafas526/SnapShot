<div class=" d-flex text-white justify-content-between align-items-center mx-5 my-5 flex-wrap">
  <div>

 <a href="/user/{{userId}}" class="text-white fs-2 ">My Profile</a>
  </div>
  <div>
    <h1 class="projectName my-0 display-2">SnapShot</h1>
  </div>
  <div>

  <a class="text-decoration-none text-white fs-2 " href="#" id="logout">Logout</a>
  </div>
</div>



<div class="tagAndProfile align-items-center d-flex justify-content-around">
   <button type="button" class="newPostBtn bg-transparent btn-primary fs-2" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Add New Post
  </button>

  <select class="tags form-select tagDropdown" aria-label="Default select example" name="tags">
    <option disabled selected value>Filter by Hashtag</option>
    <option value="all" name="all">all</option>
    {{#each tag}}

    <option value={{id}}>#{{name}}</option>
    {{/each}}
  </select>
</div>
<div class="container d-flex flex-wrap justify-content-center">
  {{#each post}}
  {{>posts}}
  {{/each}}

</div>
{{!-- Modal for new post --}}
{{>newPost}}

</div>
